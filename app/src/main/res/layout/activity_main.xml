<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.nbp.activitytransdata.MainActivity">



    <com.nbp.activitytransdata.ClearableEditTxt
        android:id="@+id/et_account"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:singleLine="true"
        android:drawableRight="@mipmap/ic_clear"
        android:hint="Please type user name."
        app:right_drawable_color="?attr/colorAccent"/>


    <com.nbp.activitytransdata.PasswrdEditText
        android:id="@+id/et_password"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:inputType="textPassword"
        android:drawableRight="@mipmap/ic_visibility_black"

        android:hint="Please type password"/>

    <com.nbp.activitytransdata.ClearableEditTxt
        android:id="@+id/et_email"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:drawableRight="@mipmap/ic_clear"
        android:hint="Pleas type your email address"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="Next"
        android:text="Click to Submit"/>

</LinearLayout>
